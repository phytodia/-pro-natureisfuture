<div class="carousel" data-controller="carousel">
    <button data-action="carousel#previous" class="carousel-control left desktop"><%= image_tag("pictos/chevron_gauche.svg", width:"15px", height:"30px") %></button>
    <button data-action="carousel#next" class="carousel-control right desktop"><%= image_tag("pictos/chevron_droite.svg", width:"15px", height:"30px")%></button>

    <button data-action="carousel#prevmobile" class="carousel-control left mobile"><%= image_tag("pictos/chevron_gauche.svg",width:"15px", height:"30px")%></button>
    <button data-action="carousel#nextmobile" class="carousel-control right mobile"><%= image_tag("pictos/chevron_droite.svg", width:"15px", height:"30px")%></button>


  <div class="slides desktop">
    <% @photos_desktop.each_with_index do |photo, index| %>
      <div data-carousel-target="slide" data-index="<%= index %>" class="slide grid three">
        <% photo.each do |elmt|%>
          <div class="slide-card-content">
            <%= image_tag elmt,class:"slide-card-img" %>
            <div class="slide-card-desc">
            <h3>Soin 1</h3>
            <p>fnsmjkbebbgejr</p>
            <%= link_to "en savoir plus", "",class: "btn-rond"%>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>


  <div class="slides mobile">
    <% @photos.each_with_index do |photo, index| %>
      <div data-carousel-target="slidemobile" data-index="<%= index %>" class="slide">
        <div class="slide-card-content">
            <%= image_tag photo,class:"slide-card-img" %>
            <div class="slide-card-desc">
            <h3>Soin 1</h3>
            <p>fnsmjkbebbgejr</p>
            <%= link_to "en savoir plus", "",class: "btn-rond"%>
            </div>
          </div>
      </div>
    <% end %>
  </div>


</div>
