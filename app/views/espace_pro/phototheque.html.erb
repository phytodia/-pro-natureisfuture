<h1>Phototh√®que</h1>

<ul class="list_phototheque">
  <% @phototheque.files.each do |file| %>
    <% if file.previewable? %>
      <li>
        <!--
        <%= image_tag file.preview(resize_to_limit: [300, 300]) %>
        -->
        <%= link_to rails_blob_path(file, disposition: 'attachment') do %>
           <%= image_tag file.preview(resize_to_limit: [200,200]) %>
          <p><%= file.filename %></p>
        <% end %>
      </li>
    <% else %>
      <li>

        <!--
        <%= image_tag file, width:300, height:300 %>
        -->
        <%= link_to rails_blob_path(file, disposition: 'attachment') do %>
         <%= image_tag file, width:200, height:200 %>
        <p><%= file.filename %></p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
