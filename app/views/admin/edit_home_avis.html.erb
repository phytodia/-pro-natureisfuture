<h1>Modifier les avis de la home</h1>
<div class="custom_form">
<table>
  <thead>
    <tr>
      <th>Auteur</th>
      <th>Commentaire</th>
      <th>Note</th>
    </tr>
  </thead>
  <tbody>
  <% @reviews.each do |review| %>
    <tr>
      <%= form_with url: update_home_avis_path, method: :post do |f| %>

        <%= f.hidden_field :key, value: review.first%>
        <td><%= review.first %></td>
        <td><%= f.label "Avis" %>
        <%= f.text_field :new_review, value: review[1]["review"] %></td>
        <td><%= f.label "Note" %>
        <%= f.text_field :new_note, value: review[1]["note"] %></td>
        <td><%= f.submit "Mettre Ã  jour l'avis" %></td>

      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
