<div class="carousel" data-controller="carousel">
  <div class="carousel-control">
    <button data-action="carousel#previous"> ← </button>
    <button data-action="carousel#next"> → </button>
  </div>
  <div class="slides">
    <% @photos.each do |photo| %>
      <div data-carousel-target="slide"><%= image_tag photo %></div>
    <% end %>
  </div>
</div>
