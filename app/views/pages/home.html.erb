<article id="home_presentation">

  <section class="presentation inside marge_home">

        <h2><%= @textes["presentation_marque"]["titre"] %></h2>
        <div class="presentation_images">
          <%= image_tag "home/presentation_marque_home_1.jpg"%>
          <%= image_tag "home/presentation_marque_home_2.jpg"%>
