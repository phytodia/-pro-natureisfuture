<h1>Prospection</h1>
<div data-controller="crm" class="custom_form prospection">
  <%= simple_form_for :datas,url: request_prospection_crm_index_path, method: :get do |f| %>
    <div class="flex">
      <%= f.input :address, label: "Adresse", required: false, label: "Adresse" %>
      <%= f.input :town, label: "Ville"%>
    </div>
    <div class="flex">
      <%= f.input :country, label: "Pays"%>
      <%= f.input :cp, label: "Code postal"%>
    </div>
    <div class="flex">

      <%= f.input :category, label: "Categorie entreprise", collection:["beauty salon","spa","pharmacy","physiotherapist","establishment"] %>

      <%= f.input :rayon,as: :integer, label: "Rayon km", input_html: { min: '0', step: 'any', max:'20' }%>
    </div>
    <%= f.input :plus, as: :boolean, label:"Ajouter les colonnes code postal, ville et pays (Temps de chargement plus long)"%>
    <%= f.input :horaires, as: :boolean, label:"Ajouter les horaires, le tel et le site internet (Temps de chargement plus long)"%>
    <%= f.submit "Envoyer",class:"btn-custom black" %>
  <% end %>
</div>
