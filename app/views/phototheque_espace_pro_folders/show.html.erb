<h1>Show Folder : <%= @folder.name %></h1>
<%= link_to "ajouter un fichier au dossier",mediateque_folder_add_file_path %>

<ul>
  <% @folder.files.each do |file| %>
    <% if file.previewable? %>
      <li>
        <%= image_tag file.preview(resize_to_limit: [300, 300]) %>
        <%= link_to "Download", rails_blob_path(file, disposition: 'attachment') %>
        <%= link_to "Supprimer", mediateque_folder_delete_file_path(file, folder:@folder) %>
      </li>
    <% else %>
      <li>
        <%= image_tag file, width:300, height:300 %>
        <%= link_to "Download", rails_blob_path(file, disposition: 'attachment') %>
        <%= link_to "Supprimer", mediateque_folder_delete_file_path(file,folder:@folder) %>
      </li>
    <% end %>
  <% end %>
</ul>
