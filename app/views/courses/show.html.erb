
<div id="cours">
  <h1><%= @cours.titre %></h1>
  <p><%= @cours.introduction %></p>
  <hr>
  <% @cours.chapters.each do |chapter| %>
    <div class="chapter">
      <div class="chapter_titre">
        <h2><%= chapter.titre %></h2>
        <i class="fa-solid fa-chevron-right fa-2xl"></i>
      </div>
      <div class="chapter_content">
        <%= chapter.content %>
      </div>
    </div>
  <% end %>
</div>
